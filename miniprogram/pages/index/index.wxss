/**index.wxss**/
page{
  background-color: #E5E5E5;
}
.container{
  margin: 0 20rpx;
}
.search-head{
  width: 100%;
  display: flex;
  height: 60rpx;
  align-items: center;
  border-radius: 60rpx;
  position: relative;
  background-color: #FFF;
  margin: 20rpx 0;
}
.search-icon{
  padding-right: 20rpx;
}
.search-nav{
  flex-grow: 1;
  color: #929292;
}
.goods-list{
  width: 100%;
}
.goods-item{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx !important;
  background-color: #FFF;
}
.goods-item .img{
  width: 230rpx;
  height: 230rpx;
  flex-shrink: 0;
}
.goods-item .content{
  margin-left: 10rpx;
}
.goods-item .content .title{
  font-size: 30rpx;
  height: 100rpx;
  width: 100%;
  line-height: 50rpx;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.price{
  margin-top: 15rpx;
  height: 50rpx;
  width: 100%;
  font-size: 30rpx;
  color: #e62828;
  line-height: 50rpx;
  font-weight: 700;
  white-space: nowrap;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
}
.goods-item .detail{
  display: flex;
  font-size: 24rpx;
  color: #666;
  margin-top: 30rpx;
}